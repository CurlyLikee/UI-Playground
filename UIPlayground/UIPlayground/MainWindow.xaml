<Window x:Class="UIPlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="900" Width="1600" WindowStyle="ThreeDBorderWindow" Topmost="False">


    <Grid>
        <TextBlock x:Name="ClockText"
        Text="13:48"
        FontSize="110"
        Foreground="White"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,0,1214,0" Height="145" Width="348"/>

        <TextBlock x:Name="DayText"
        Text="Friday"
        FontSize="50"
        Foreground="White"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,156,1201,0" Height="68" Width="351" RenderTransformOrigin="-1.986,1.824"/>

        <TextBlock x:Name="DateText"
        Text="17.07.2025"
        FontSize="40"
        Foreground="White"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,229,1201,0" Height="50" Width="351"/>


        <Canvas Grid.RowSpan="4">
            <Line X1="400" Y1="0" X2="400" Y2="890" Stroke="White" StrokeThickness="3" HorizontalAlignment="Center" Height="884" VerticalAlignment="Center"/>
            <Line X1="0" Y1="300" X2="400" Y2="300" Stroke="White" StrokeThickness="3"/>
            <Line X1="0" Y1="450" X2="400" Y2="450" Stroke="White" StrokeThickness="3"/>
            <TextBlock Canvas.Left="45" TextWrapping="Wrap" Canvas.Top="467" Background="{Binding AllowDrop, ElementName=DayText}" Foreground="White" Height="65" Width="310" FontSize="48" HorizontalAlignment="Left" VerticalAlignment="Center" Text="mouse charge"/>
            <Ellipse Height="200" Canvas.Left="100" Canvas.Top="575" Width="200" Stroke="{Binding BatteryColor}" StrokeThickness="5" Fill="Transparent" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Canvas.Left="177" Canvas.Top="657" Text="{Binding BatteryLevel, StringFormat={}{0}%}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Rectangle Fill="#30FFFFFF" 
           Width="400" Height="283" 
           Canvas.Left="477" Canvas.Top="51" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Button x:Name="OpenSettings" HorizontalAlignment="Center" Height="90" VerticalAlignment="Center" Width="90" Canvas.Left="18" Canvas.Top="329" Click="OpenSettings_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/pngtree-vector-cog-wheel-icon-png-image_987529.jpg"/>
                </Button.Background>
            </Button>


            <Button x:Name="FolderButton" HorizontalAlignment="Left" Height="90" VerticalAlignment="Center" Width="90" Canvas.Left="155" Canvas.Top="329" Click="Folder_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/3a6cf033154d67bab1dd8eb330385d2d.jpg"/>
                </Button.Background>
            </Button>


            <Button x:Name="OpenNotepad" HorizontalAlignment="Left" Height="90" VerticalAlignment="Center" Width="90" Canvas.Left="290" Canvas.Top="329" Click="OpenNotepad_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/images.png"/>
                </Button.Background>
            </Button>


            <Button Height="242" Canvas.Left="498" Canvas.Top="71" Width="359" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Weather_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Знімок екрана 2025-08-02 211408.png"/>
                </Button.Background>
            </Button>


            <Rectangle Fill="#30FFFFFF" 
                Width="400" Height="282" 
                Canvas.Left="1135" Canvas.Top="278" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Rectangle Fill="Black" 
                Width="360" Height="240" 
                Canvas.Left="1155" Canvas.Top="299" HorizontalAlignment="Left" VerticalAlignment="Center"/>


            <TextBlock x:Name="QuoteText"
                Width="320" Height="200"
                Canvas.Left="1175" Canvas.Top="319"
                Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontFamily="Bradley Hand ITC"/>



            <Rectangle Fill="#30FFFFFF" 
                Width="400" Height="282" 
                Canvas.Left="600" Canvas.Top="532" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Button Height="242" Canvas.Left="620" Canvas.Top="554" Width="360" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Currency_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Знімок екрана 2025-08-02 232612.png"/>
                </Button.Background>
            </Button>
        </Canvas>
    </Grid>

    <Window.Background>
        <ImageBrush ImageSource="C:\Users\Альона\source\repos\softserve csharp\final_project\UIPlayground\UIPlayground\Images\image_1.png" Stretch="UniformToFill"/>
    </Window.Background>
</Window>
